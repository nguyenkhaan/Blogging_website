generator client {
  provider = "prisma-client-js"
  output   = "../../generated/mongodb"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGO_URL")
}

model User {
  userID      String     @id @map("_id") @db.ObjectId //Loi: Nang cap uuid thanh chuan 16 cho kho bi trung 
  avatar String?
  name        String
  username    String
  password    String
  follows     Int        @default(0) //So luong nguoi ma nguoi dung theo doi 
  subscribers Int        @default(0) //So luong nguoi ma nguoi dung dang ki 
  blogs       String[]   @default([]) //So luong bai Blogs 
  famous      Float      @default(0) //Danh gia muc do noi tieng cua tac gia 
  activities  DateTime[] @default([]) //Hoat dong cua nguoi dung 
}
